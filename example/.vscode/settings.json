	"i18n-ally.localesPaths": [
		"./src/lang/"
	],
	"i18n-ally.dirStructure": "auto",
	"i18n-ally.displayLanguage": "ru",
	"i18n-ally.editor.preferEditor": true,
	"i18n-ally.preferredDelimiter": "_",
	"i18n-ally.extract.keyPrefix": "\\T::",
	"i18n-ally.enabledFrameworks": [
		"i18n-tag"
	],
	"i18n-ally.enabledParsers": [
		"yaml",
		"json"
	],
	"i18n-ally.translate.deepl.useFreeApiEntry": true,
	"i18n-ally.extract.autoDetect": true,
	"i18n-ally.extract.keygenStyle": "PascalCase",
	"i18n-ally.extract.keyMaxLength": 255,
	"i18n-ally.frameworks.ruby-rails.scopeRoot": "app/lang",
	"i18n-ally.keepFulfilled": true,

	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": ".yml",
				"isAsync": true,
				"cmd": "${workspaceFolder}/src/lang/generateHelper.sh"
			}
		]
	},
	"code-runner.runInTerminal": true,
	"code-runner.executorMap": {
		"php": "$workspaceRoot/run_php_in_docker.sh php $workspaceRoot $fullFileName"
	},
	"php.version": "8.3",
	"php.validate.executablePath": "/opt/local/bin/php",

	"phpunit.command": "/usr/local/bin/docker compose -f ./docker-compose.yml exec server bash -c \"${php} ${phpargs} ${phpunit} ${phpunitargs}\"",
	"phpunit.php": "php",
	"phpunit.phpunit": "./src/vendor/bin/phpunit", 
	"phpunit.args": [
		"--configuration",
		"${workspaceFolder}/phpunit.xml"
	],
	"phpunit.paths": {
		"/src/": "/",
		"${workspaceFolder}": "/app",
	},
}